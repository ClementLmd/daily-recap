{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "shared": ["../shared/dist"]
    },
    "typeRoots": ["./api/types", "./node_modules/@types", "../node_modules/@types"],
    "types": ["express", "node", "jest"]
  },
  "include": ["api/**/*", "api/types/**/*.d.ts"],
  "exclude": ["node_modules", ".vercel"]
}
